/* components/comment/comment.wxss */

.comment_container {
  margin-left: 20rpx;
}
.comment_title {
  margin-top: 20rpx;
  font-size: 40rpx;
}

.comment_content {
  margin-top: 20rpx;
  color:rgb(187, 182, 182);
  font-size: 25rpx;
}

.comment_footer {
  height: 40rpx;
  display: flex;
  font-size: 26rpx;
  justify-content: center;
  align-content: center;
  border-bottom: 1rpx solid rgb(245, 242, 242);
}
.comment_footer view {
  flex:1;
  text-align: center;
}
.share_img {
  display: inline-block;
  vertical-align: middle;
  height:30rpx;
  width:30rpx;
}